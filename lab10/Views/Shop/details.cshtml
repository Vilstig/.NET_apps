@model lab10.Models.Article

@{
    ViewData["Title"] = "Szczegóły Towaru";
}

<h1>Szczegóły Towaru</h1>

<div class="row">
    <div class="col-md-5">
        @{
            var imagePath = Model.ImageUrl ?? ViewBag.PlaceholderImage;
        }
        <img src="@imagePath" alt="@Model.Name" style="max-width: 100%; height: auto;" class="img-thumbnail mb-3" />
    </div>

    <div class="col-md-7">
        <h3>@Model.Name</h3>
        <hr />
        
        <h2>
            <span class="badge bg-success">@Model.Price.ToString("C")</span>
        </h2>
        
        <dl class="row mt-4">
            <dt class="col-sm-3">Kategoria:</dt>
            <dd class="col-sm-9">
                @(Model.Category != null ? Model.Category.Name : "Brak kategorii")
            </dd>

            <dt class="col-sm-3">ID Towaru:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
            
            <dt class="col-sm-3">Opis:</dt>
            <dd class="col-sm-9 text-muted">To jest przykładowy opis produktu...</dd>
        </dl>
        
        @if (!User.IsInRole("Admin"))
        {
            <a asp-controller="Shop" 
               asp-action="AddToCart" 
               asp-route-id="@Model.Id" 
               class="btn btn-lg btn-success mt-4">
                <i class="bi bi-cart-plus"></i> Dodaj do koszyka
            </a>
        }
        else
        {
            <div class="alert alert-warning mt-4">
                <i class="bi bi-info-circle"></i> Administrator nie może dodawać produktów do koszyka.
            </div>
            
            <a asp-controller="Article" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                Edytuj ten towar
            </a>
        }

    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy towarów</a>
</div>