@model lab10.Models.ShopCart 

@{
    ViewData["Title"] = "Twój Koszyk";
}

<h1>Twój Koszyk</h1>

@if (Model.Items.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Wartość</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            @{
                                var img = item.Article.ImageUrl ?? ViewBag.PlaceholderImage;
                            }
                            <img src="@img" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;" />
                            <span>@item.Article.Name</span>
                        </div>
                    </td>
                    <td>@item.Article.Price.ToString("C")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="ChangeQuantity" asp-route-id="@item.Article.Id" asp-route-quantity="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">-</a>
                            <span class="btn btn-sm btn-light disabled">@item.Quantity</span>
                            <a asp-action="ChangeQuantity" asp-route-id="@item.Article.Id" asp-route-quantity="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">+</a>
                        </div>
                    </td>
                    <td>@item.TotalPrice.ToString("C")</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Article.Id" class="btn btn-sm btn-danger">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>RAZEM DO ZAPŁATY:</strong></td>
                <td colspan="2"><strong>@Model.TotalAmount.ToString("C")</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">Kontynuuj zakupy</a>
        <button class="btn btn-success">Przejdź do kasy</button>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>Twój koszyk jest pusty</h4>
        <p>Nie dodałeś jeszcze żadnych produktów.</p>
        <a asp-action="Index" class="btn btn-primary mt-2">Wróć do sklepu</a>
    </div>
}