@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@model lab10.Models.ShopCart

@{
    ViewData["Title"] = "Twój Koszyk";
}

<h1>Twój Koszyk</h1>



@if (Model.Items.Any())
{
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Produkt</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Wartość</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            @{
                                var img = item.Article.ImageUrl ?? ViewBag.PlaceholderImage;
                            }
                            <img src="@img" class="rounded border" style="width: 50px; height: 50px; object-fit: cover; margin-right: 15px;" />
                            <span class="fw-bold">@item.Article.Name</span>
                        </div>
                    </td>
                    <td>@item.Article.Price.ToString("C")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="ChangeQuantity" asp-route-id="@item.Article.Id" asp-route-quantity="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">-</a>
                            <span class="btn btn-sm btn-light border disabled text-dark" style="width: 40px;">@item.Quantity</span>
                            <a asp-action="ChangeQuantity" asp-route-id="@item.Article.Id" asp-route-quantity="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">+</a>
                        </div>
                    </td>
                    <td class="fw-bold">@item.TotalPrice.ToString("C")</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Article.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Usuń
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="table-active">
                <td colspan="3" class="text-end text-uppercase"><strong>Razem do zapłaty:</strong></td>
                <td colspan="2" class="text-success fs-5">
                    @* Upewnij się, że w modelu masz właściwość GrandTotal (lub TotalAmount) *@
                    <strong>@Model.TotalAmount.ToString("C")</strong>
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-4 p-3 bg-light rounded shadow-sm">
        
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kontynuuj zakupy
        </a>

        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-controller="Shop" 
            asp-action="Checkout" 
            class="btn btn-success btn-lg px-5">
                Złóż zamówienie <i class="bi bi-check-circle ms-2"></i>
            </a>
        }
        else
        {
            <div class="text-end">
                <small class="text-muted d-block mb-1">Aby sfinalizować zamówienie, musisz się zalogować.</small>
                
                <a asp-area="Identity" 
                   asp-page="/Account/Login" mini
                   asp-route-returnUrl="@Url.Action("Cart", "Shop")"
                   class="btn btn-primary btn-lg">
                    <i class="bi bi-person-lock me-2"></i> Zaloguj się, aby zamówić
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center mt-5">
        <div class="mb-3">
            <i class="bi bi-cart-x display-1 text-muted"></i>
        </div>
        <h3>Twój koszyk jest pusty</h3>
        <p class="text-muted">Wygląda na to, że nie dodałeś jeszcze żadnych produktów.</p>
        <a asp-action="Index" class="btn btn-primary mt-3">Wróć do sklepu</a>
    </div>
}