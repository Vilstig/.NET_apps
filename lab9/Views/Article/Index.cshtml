@model IEnumerable<lab9.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<h2>Articles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            <th>@Html.DisplayNameFor(m => m.First().ExpirationDate)</th>
            <th>@Html.DisplayNameFor(m => m.First().Category)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@Html.DisplayFor(x => item.Name)</td>
            <td>@Html.DisplayFor(x => item.Price)</td>
            <td>@Html.DisplayFor(x => item.ExpirationDate)</td>
            <td>@Html.DisplayFor(x => item.Category)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section ExtraInfo {
    <div class="alert alert-info mt-3">
        Additional info:
        @{
            decimal sum = 0M;
        }
        @foreach (var article in Model)
        {
            sum = decimal.Add(sum, article.Price);
        }
        Total Price of Articles: @sum

    </div>
}
