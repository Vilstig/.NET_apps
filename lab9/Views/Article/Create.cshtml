@model lab9.Models.Article

@{
    ViewData["Title"] = "Create Article";
}

<h2>Create</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        <input asp-for="Name" class="form-control" />
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        <input asp-for="Price" class="form-control" />
        @Html.ValidationMessageFor(m => m.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ExpirationDate)
        <input asp-for="ExpirationDate" class="form-control" type="date" />
        @Html.ValidationMessageFor(m => m.ExpirationDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        <select asp-for="Category" class="form-control"
                asp-items="Html.GetEnumSelectList<lab9.Models.ArticleCategory>()">
        </select>
        @Html.ValidationMessageFor(m => m.Category)
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</form>
