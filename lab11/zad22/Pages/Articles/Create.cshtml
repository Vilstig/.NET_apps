@page
@model zad2.Pages.Articles.CreateModel

@{
    ViewData["Title"] = "Dodaj Towar";
}

<h1>Dodaj Towar</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Article.Name" class="control-label"></label>
                <input asp-for="Article.Name" class="form-control" />
                <span asp-validation-for="Article.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Article.Price" class="control-label"></label>
                <input asp-for="Article.Price" class="form-control" />
                <span asp-validation-for="Article.Price" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Article.CategoryId" class="control-label"></label>
                <select asp-for="Article.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Wybierz kategorię --</option>
                </select>
                <span asp-validation-for="Article.CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Article.ImageFile" class="control-label">Obrazek (Opcjonalnie)</label>
                <input asp-for="Article.ImageFile" type="file" class="form-control" />
                <span asp-validation-for="Article.ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Utwórz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}