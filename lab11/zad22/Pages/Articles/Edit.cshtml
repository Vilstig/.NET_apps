@page
@model zad2.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edytuj Towar";
}

<h1>Edytuj Towar</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Article.Id" />
            <input type="hidden" asp-for="Article.ImageUrl" /> 
            
            <div class="form-group mb-3">
                <label asp-for="Article.Name" class="control-label"></label>
                <input asp-for="Article.Name" class="form-control" />
                <span asp-validation-for="Article.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Article.Price" class="control-label"></label>
                <input asp-for="Article.Price" class="form-control" />
                <span asp-validation-for="Article.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Article.CategoryId" class="control-label">Kategoria</label>
                <select asp-for="Article.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Wybierz kategorię --</option>
                </select>
                <span asp-validation-for="Article.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn btn-warning" />
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <h4>Aktualny obrazek:</h4>
        @{
            var imgSrc = !string.IsNullOrEmpty(Model.Article.ImageUrl) ? Model.Article.ImageUrl : "/images/no_image.png";
        }
        <img src="@imgSrc" alt="@Model.Article.Name" style="max-width: 100%; height: auto;" class="img-fluid img-thumbnail" />
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}