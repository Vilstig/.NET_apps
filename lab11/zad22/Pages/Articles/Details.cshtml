@page
@model zad2.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Szczegóły Towaru";
}

<h1>Szczegóły Towaru</h1>

<div>
    <hr />
    
    @{
        var imagePath = Model.Article.ImageUrl ?? ViewBag.PlaceholderImage;
    }
    <img src="@imagePath" alt="@Model.Article.Name" style="max-width: 400px; height: auto;" class="img-thumbnail mb-3" />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Category.Name)
        </dd>
        
        <dt class="col-sm-2">
            Ścieżka Obrazu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.ImageUrl)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id" class="btn btn-warning">Edytuj</a> |
    <a asp-page="./Index">Powrót do listy</a>
</div>